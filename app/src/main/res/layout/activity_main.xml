<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ya"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
            tools:ignore="MissingConstraints">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="94dp" app:srcCompat="@drawable/f"
                android:id="@+id/imageView"/>
        <TextView
                android:text="Fanny Vega Variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="24sp"
                android:layout_marginLeft="105dp" android:layout_marginTop="10dp"/>
        <TextView
                android:text="Universitas Teknologi Yogyakarta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="24sp"
                android:layout_marginLeft="20dp" android:layout_marginTop="10dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Instagram"
                    android:background="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_ig" android:layout_weight="1"/>
            <Button
                    android:text="Facebook"
                    android:layout_width="wrap_content"
                    android:background="@color/colorAccent"
                    android:layout_height="wrap_content" android:id="@+id/btn_fb" android:layout_weight="1"/>
        </LinearLayout>
        <TextView
                android:text="MP3 Player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:textSize="24sp"
                android:textColor="#009688" android:layout_marginLeft="130dp" android:layout_marginTop="25dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Pause"
                    android:layout_width="wrap_content"
                    android:background="@color/colorAccent"
                    android:layout_height="wrap_content" android:id="@+id/btn_ps" android:layout_weight="1"/>
            <Button
                    android:text="Play"
                    android:background="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_p" android:layout_weight="1"/>
            <Button
                    android:text="STOP"
                    android:layout_width="wrap_content"
                    android:background="@color/colorAccent"
                    android:layout_height="wrap_content" android:id="@+id/btn_stp" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>